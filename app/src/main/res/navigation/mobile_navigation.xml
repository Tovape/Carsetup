    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.carsetup.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="Home" />

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.carsetup.ui.tasks.TasksFragment"
        android:label="Tasks"
        tools:layout="Tasks" />

    <fragment
        android:id="@+id/navigation_add"
        android:name="com.example.carsetup.ui.add.AddFragment"
        android:label="Add"
        tools:layout="Add" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.carsetup.ui.notifications.NotificationsFragment"
        android:label="Notifications"
