<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark Theme -->
    <style name="Theme_Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- General -->
        <item name="colorPrimary">@color/secondColor</item>
        <item name="colorPrimaryDark">@color/secondColor</item>
        <item name="colorAccent">@color/secondColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondColor</item>
        <!-- Extra -->
        <item name="background">@color/fifthColor</item>
        <item name="black">@color/black</item>
        <item name="white">@color/white</item>
        <item name="softwhite">@color/softwhite</item>
        <item name="softblack">@color/softblack</item>
        <item name="grey">@color/grey</item>

        <item name="mainColor">@color/mainColor</item>
        <item name="secondColor">@color/secondColor</item>
        <item name="thirdColor">@color/thirdColor</item>
        <item name="fourthColor">@color/fourthColor</item>
        <item name="fifthColor">@color/fifthColor</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme_Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- General -->
        <item name="colorPrimary">@color/secondColor</item>
        <item name="colorPrimaryDark">@color/secondColor</item>
        <item name="colorAccent">@color/secondColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondColor</item>
        <!-- Extra -->
        <item name="background">@color/softwhite</item>
        <item name="black">@color/white</item>
        <item name="white">@color/black</item>
        <item name="softwhite">@color/softblack</item>
        <item name="softblack">@color/softwhite</item>
        <item name="grey">@color/grey</item>

        <item name="mainColor">@color/mainColor</item>
        <item name="secondColor">@color/secondColor</item>
        <item name="thirdColor">@color/thirdColor</item>
        <item name="fourthColor">@color/softwhite</item>
        <item name="fifthColor">@color/fifthColor</item>
    </style>

    <style name="Theme_Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme_Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme_Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
